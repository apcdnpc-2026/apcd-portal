# ===========================
# APCD Portal - Environment Variables
# ===========================
# Copy this file to .env and fill in values

# ---- General ----
NODE_ENV=development
APP_NAME="APCD Empanelment Portal"
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# ---- Database (PostgreSQL) ----
DATABASE_URL=postgresql://apcd_user:apcd_password@localhost:5432/apcd_portal?schema=public
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=apcd_user
DATABASE_PASSWORD=apcd_password
DATABASE_NAME=apcd_portal

# ---- Redis ----
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ---- JWT Auth ----
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRY=7d

# ---- NextAuth (Frontend) ----
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# ---- MinIO (S3-compatible storage) ----
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=apcd_minio_admin
MINIO_SECRET_KEY=apcd_minio_password
MINIO_BUCKET=apcd-documents
MINIO_USE_SSL=false
MINIO_CONSOLE_PORT=9001

# ---- Razorpay ----
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ---- Email (set SMTP_ENABLED=true when ready) ----
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@apcd.npc.gov.in

# ---- SMS (disabled initially) ----
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=

# ---- File Upload Limits ----
MAX_FILE_SIZE_MB=10
MAX_TOTAL_UPLOAD_MB=100

# ---- Rate Limiting ----
THROTTLE_TTL=60
THROTTLE_LIMIT=100
